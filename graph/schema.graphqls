# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  title: String!
  text: String!
  done: Boolean!
}

type Query {
  todos: [Todo!]!
  todo(id: ID!): Todo!
}

input NewTodo {
  title: String!
  text: String!
}


type Mutation {
  createTodo(input: NewTodo!): Todo! 
}